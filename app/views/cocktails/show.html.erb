<div class="container">
  <h1><%= @cocktail.name %></h1>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @doses.each do |dose|%>
          <tr>
            <td><%=  dose.description %></td>
            <td><%= dose.ingredient.name %></td>
            <td>

              <%= link_to cocktail_dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
              <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

  <%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Back to all cocktails", cocktails_path %>
</div>
